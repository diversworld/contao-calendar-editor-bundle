{
  "name": "diversworld/contao-calendar-editor-bundle",
  "description": "Contao Extension to create and edit calendar events in the frontend.",
  "keywords": ["contao",
			   "calendar",
			   "calendar_editor",
			   "calendar editor",
			   "calendar frontend",
			   "events", "frontend",
			   "events frontend"],
  "type": "contao-bundle",
  "homepage": "https://github.com/diversworld/contao-calendar-editor-bundle",
  "license": "LGPL-3.0-or-later",

    "require": {
      "php": "^8.1",
      "contao/core-bundle": "~5.3" ,
      "contao/calendar-bundle": "^5.3",
      "menatwork/contao-multicolumnwizard-bundle": "^3.0"
    },
	"autoload": {
		"psr-4": {
			"Diversworld\\CalendarEditorBundle\\": "src/"
		},
        "classmap": [
            "src/Resources/contao/"
		],
		"exclude-from-classmap": [
            "src/Resources/contao/config/",
            "src/Resources/contao/dca/",
            "src/Resources/contao/languages/",
            "src/Resources/contao/templates/"
		]
  	},
	"extra":{
		"contao-manager-plugin": "Diversworld\\CalendarEditorBundle\\ContaoManager\\Plugin"
	},
  "config": {
    "allow-plugins": {
      "contao-components/installer": true,
      "php-http/discovery": true,
      "contao-community-alliance/composer-plugin": true
    }
  },
  "version": "5.0.1"
}
